{
  "extends": ["@tsconfig/node18", "@tsconfig/strictest"],
  "compilerOptions": {
    "outDir": "lib",
    "customConditions": ["antitoxic-dev"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "esnext",
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": false,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"]
}
